pipeline:
  mutators:
  # Apply environment-specific setters
  - image: gcr.io/kpt-fn/apply-setters:v0.2.0
    configMap:
      environment: production # kpt-set: ${environment}
      image_registry: security.company.com/registry # kpt-set: ${image_registry}
      image_tag: v1.0.0 # kpt-set: ${image_tag}
      replicas: "3" # kpt-set: ${replicas}
      cpu_requests: 200m # kpt-set: ${cpu_requests}
      memory_requests: 512Mi # kpt-set: ${memory_requests}
      cpu_limits: 1000m # kpt-set: ${cpu_limits}
      memory_limits: 1Gi # kpt-set: ${memory_limits}
      log_level: info # kpt-set: ${log_level}
      enable_debug: "false" # kpt-set: ${enable_debug}
  # Update image tags
  - image: gcr.io/kpt-fn/set-image:v0.1.0
    configMap:
      name: mcp-server
      newImage: security.company.com/registry/mcp-server # kpt-set: ${image_registry}/mcp-server
      newTag: v1.0.0 # kpt-set: ${image_tag}
  validators:
  # Validate Kubernetes resources
  - image: gcr.io/kpt-fn/kubeval:v0.3.0
    configMap:
      strict: "true"
  # Validate MCP server configuration
  - image: security.company.com/kpt-functions/mcp-validator:v1.0.0
